@model RentAMovies.Models.ViewModels.RentalDetailsViewModel

@{ ViewData["Title"] = "Confirm";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<br />
<div class="backgroundWhite">
    <div class="row px-3">
        <div class="col-8">
            <h2 class="text-info">Rental Confirmed</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Index" asp-controller="Home" class="myButtonGreen text-white text-center form-control">New Rental</a>
        </div>
    </div>

    @if (Model.RentalHeader != null)
    {
<div style="color:maroon" class="p-3">
