@model RentAMovies.Models.ViewModels.RentalDetailsViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <input asp-for="@Model.RentalHeader.RentalDate" hidden />
        <div class="border backgroundWhite">
            <div class="row">
                <div class="col-6">
                    <h2 class="text-info"> List of rented movies</h2>                    
                </div>
                <div class="col-6 text-right">
                    <h3><span class="badge badge-pill text-info">Rental ID: @Model.RentalHeader.Id</span></h3>
                </div>
            </div>
            <br />
            <div>
                <table class="table table-striped border">
                    <tr class="table-secondary">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.RentalDetails1.Movie.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RentalDetails1.Status)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.RentalDetails)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Movie.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                <div class="col-11 col-sm-4 col-lg-11">
                                    <div class="float-right mx-1">
                                        <button type="submit" class="btn btn-outline-info" asp-action="minus" asp-route-Id="@item.Id" asp-route-rentalId="@Model.RentalHeader.Id">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                    </div>
                                    <div class="float-right mx-2">
                                        <button type="submit" class="btn btn-outline-danger" asp-action="plus" asp-route-Id="@item.Id" asp-route-rentalId="@Model.RentalHeader.Id">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </td>
                        </tr>

                        }
                    </tbody>
                </table>
                <div class="row">
                    <div class="col-4">
                    </div>
                    <div class="col-4">
                        <a asp-action="RentalHistory" class="myButtonGreen form-control text-center">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
</form>




