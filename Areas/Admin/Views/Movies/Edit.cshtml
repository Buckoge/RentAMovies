@model RentAMovies.Models.Movie

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Edit movie</h2>
<br />

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="border backgroundWhite row">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="GenreId" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Image2" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" multiple class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MovieDescription" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    @Html.TextAreaFor(m => m.MovieDescription)
                </div>
                <span asp-validation-for="MovieDescription" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="DateAdded" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="DateAdded" class="form-control" />
                </div>
                <span asp-validation-for="DateAdded" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ReleaseDate" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ReleaseDate" class="form-control" />
                </div>
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="NumberInStock" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="NumberInStock" class="form-control" />
                </div>
                <span asp-validation-for="NumberInStock" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="NumberAvailable" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="NumberAvailable" class="form-control" />
                </div>
                <span asp-validation-for="NumberAvailable" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Price" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

            <div class="col-3 offset-1">
                <img src="@Model.Image2" width="100%" style="border-radius:5px;border: 1px solid #bbb9b9;" />
            </div>

            <div class="col-8">
                <div class="col-8 offset-4">
                    <partial name="_EditAndBackToListButton" model="Model.Id" />
                </div>
            </div>


        </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
    tinymce.init({
      selector: 'textarea',
      plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
      toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
      toolbar_mode: 'floating',
      tinycomments_mode: 'embedded',
      tinycomments_author: 'Author name',
    });
    </script>
}