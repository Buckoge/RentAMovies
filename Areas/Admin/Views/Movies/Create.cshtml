@model RentAMovies.Models.Movie

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Create movie</h2>
<br />


<form asp-action="Create" enctype="multipart/form-data">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="GenreId" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MovieDescription" class="col-form-label"></label>
            </div>
            <div class="col-5">
                @Html.TextAreaFor(m => m.MovieDescription)
            </div>
            <span asp-validation-for="MovieDescription" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="DateAdded" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="DateAdded" class="form-control" />
            </div>
            <span asp-validation-for="DateAdded" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ReleaseDate" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="ReleaseDate" class="form-control" />
            </div>
            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="NumberInStock" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="NumberInStock" class="form-control" />
            </div>
            <span asp-validation-for="NumberInStock" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="NumberAvailable" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="NumberAvailable" class="form-control" />
            </div>
            <span asp-validation-for="NumberAvailable" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>
    </div>
</form>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
