@model IEnumerable<Movie>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@if (Model.Count() > 0)
{
    <div class="col-12 post @Model.FirstOrDefault().Genre.Name.Replace(" ",string.Empty) menu-restaurant">
        <div class="row">
            <h3 class="text-info"> @Model.FirstOrDefault().Genre.Name </h3>
        </div>

        @foreach (var item in Model)
        {
            <div class="border border-info rounded col-12" style="margin-bottom:10px; margin-top:10px; padding:10px">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        <img src="@item.Image2" width="50%" style="border-radius:5px;border:1px solid #bbb9b9" />
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <div class="row pr-3">                            
                            <div class="col-6 text-left" style="color:maroon">
                                <h4>@item.Name</h4>
                            </div>
                        </div>


                        <div class="row col-12 text-justify d-none d-md-block">
                            <p>@Html.Raw(item.MovieDescription)</p>
                        </div>
                        <div class="col-md-3 col-sm-12 offset-md-9 text-center ">
                            <a asp-action="Details" class="myButtonBlue form-control text-white" asp-route-id="@item.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="p-4"></div>
    </div>
}