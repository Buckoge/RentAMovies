@model RentAMovies.Models.ViewModels.RentalDetailsViewModel
@using RentAMovies.Utility
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<form asp-action="OrderPickup" asp-controller="Order" asp-route-orderId="@Model.RentalHeader.Id" method="post">
    <div class="container row border ml-1 backgroundWhiteBorder10Padding" style="width:100%">
        <div class="col-lg-8 col-12" style="border-right:1px solid #bbb9b9">
            <br />
            <input type="hidden" asp-for="RentalHeader.Id" />

            <div class="form-group row">
                <div class="col-3">
                    <label>Name</label>
                </div>
                <div class="col-9">
                    <input asp-for="RentalHeader.ApplicationUser.Name" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="RentalHeader.ApplicationUser.Email"></label>
                </div>
                <div class="col-9">
                    <input asp-for="RentalHeader.ApplicationUser.Email" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="RentalHeader.ApplicationUser.PhoneNumber"></label>
                </div>
                <div class="col-9">
                    <input asp-for="RentalHeader.ApplicationUser.PhoneNumber" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="RentalHeader.Comments"></label>
                </div>
                <div class="col-9">
                    <input asp-for="RentalHeader.Comments" disabled class="form-control" />
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-12">
            <h4 class="d-flex justify-content-between align-content-center mb-3">
                <span class="text-muted">Rental ID: </span>
                <span class="badge badge-secondary badge-pill">@Model.RentalHeader.Id</span>
            </h4>
           
            <button type="submit" disabled class="myButtonBlue text-white form-control">@Model.RentalHeader.Status</button>
        </div>

    </div>
</form>